{
	"name": "templatesforreact",
	"displayName": "TemplatesForReact",
	"description": "This extension the creation of folder from templates",
	"version": "1.0.0",
	"publisher": "vincentB",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"icon": "images/directory.png",
	"activationEvents": [
		"onCommand:templates.templates_for_react"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/VincBour/templates_for_react_vscode_ext.git"
	},
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "templates.templates_for_react",
				"title": "Create new Folder with Template"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "templates.templates_for_react",
					"group": "2_workspace@500"
				}
			]
		},
		"configuration": {
			"title": "Templates For React",
			"properties": {
				"templates_for_react.structures": {
					"type": "array",
					"scope": "window",
					"default": [
						{
							"name": "Context",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "ComponentStory",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "Functional Component",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "Component",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "Function",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "Page",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "Page With ReactQuery",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "useMutation Hooks",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "useQuery Hooks",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "Machine xstate",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "ActionAssign xstate",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						},
						{
							"name": "Guard xstate",
							"disableTemplate": false,
							"withDirectory": true,
							"nammingConvention": "noNC"
						}
					],
					"description": "you can enable/disable template with the 'disableTemplate' property. If disableTemplate is true then the template will no longer appear in the list of available templates.\n you can add a convention namming with the 'nammingConvention' property. By default 'nammingConvention' is noNC (no namming convention). You can modify noNC with: camelCase, pascalCase, kebabCase or snakeCase"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"e2e": "node ./out/test/runTest.js",
		"test": "mocha ./out/src/test/unit"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/sinon": "^9.0.11",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"sinon": "^10.0.0",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"@types/chai": "^4.2.16",
		"@types/sinon-chai": "^3.2.5",
		"chai": "^4.3.4",
		"change-case": "^4.1.2",
		"sinon-chai": "^3.6.0"
	}
}
